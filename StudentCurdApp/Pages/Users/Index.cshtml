@page "{pagenum:int?}"
@model StudentCurdApp.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Password)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.User) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
            <td>
                    <a asp-page="./Edit" class="btn btn-warning" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Edit" class="btn btn-success" asp-route-id="@item.Id">Change Password</a> |
                    <a asp-page="./Details" class="btn btn-primary" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<!-- Pagination section -->
<div class="d-flex justify-content-between align-items-center mt-4">
    @if (Model.CurrentPage > 1)
    {
        <a asp-page="./Index" asp-route-pagenum="@(Model.CurrentPage - 1)" class="btn btn-secondary">Previous</a>
    }

    <span>Page @Model.CurrentPage of @Model.TotalPages</span>

    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a asp-page="./Index" asp-route-pagenum="@(Model.CurrentPage + 1)" class="btn btn-secondary">Next</a>
    }
</div>


<!-- End of pagination section -->
